<body>
  <div class="wrapper ">
    <%= render 'shared/sidebar'%>
    <div class="main-panel">
      <%= render 'shared/navbar'%>
      <div class="content">

        <div class="container-fluid">

          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">

               <div class="row">
                <div class="col-md-6">
                  <h4 class="card-title ">Kullanıcılar</h4>
                  <p class="card-category">Kullanıcı Bilgileri</p>
                </div>
                <div class="col-md-6">

                  <form class="navbar-form">
                    <div class="input-group no-border">
                      <input type="text" id="search" onkeyup="myFunction()" value="" class="form-control" placeholder="Kullanıcı İsiminde Arayınız." style="text-color: white;">
                      <button type="submit" class="btn btn-white btn-round btn-just-icon">
                        <i class="material-icons">search</i>
                        <div class="ripple-container"></div>
                      </button>
                    </div>
                  </form>  

                </div>
              </div>

            </div>
            <div class="card-body">
              <div class="table-responsive">

                <table class="table" id="myTable">
                  <thead>
                    <tr>
                     <th>Adı & Soyadı</th>
                     <th>Email</th>
                     <th>Kullanıcı Hesap Ayarları</th>

                     <a class="btn btn-warning " href="<%=new_user_path%>" type="button">
                      <i class="material-icons">person_add</i>                 
                      Kullanıcı Ekle
                    </a>

                  </tr>

                </thead>
                <tbody>
                  <% @users.each do |user| %>
                  <tr data-expanded="true">
                    <td><%= user.name_surname %></td>
                    <td><%= user.email %></td>
                    <td> 
                      <a class="btn btn-warning" href="<%=edit_user_path(user)%>" type="button">
                        <i class="material-icons">edit</i>                 
                        Düzenle
                      </a>

                      <a class="btn btn-warning" href="<%=user_path(user)%>" type="button">
                        <i class="material-icons">visibility</i>                 
                        Göster
                      </a>
                    </td>

                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render 'shared/footer'%>
  </div>
</div>
</div>

<script>  
  $(document).ready(function(){  
   $('#search').keyup(function(){  
    search_table($(this).val());  
  });  
   function search_table(value){  
    $('#myTable tr').each(function(){  
     var found = 'false';  
     $(this).each(function(){  
      if($(this).text().toUpperCase().indexOf(value.toUpperCase()) >= 0)  
      {  
       found = 'true';  
     }  
   });  
     if(found == 'true')  
     {  
      $(this).show();  
    }  
    else  
    {  
      $(this).hide();  
    }  
  });  
  }  
});  
</script>  
</body>

